<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollView6">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.noelle.mvp.WorkScreen"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/textView29"
            android:background="@drawable/section_border_p"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="1dp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/work_experience"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/textView29"
            android:layout_centerHorizontal="true"
            tools:ignore="RelativeOverlap" />

        <Button
            android:id="@+id/button17"
            android:background="@mipmap/backstraight"
            android:layout_width="60sp"
            android:layout_height="50sp"
            tools:ignore="RelativeOverlap"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_above="@+id/textView39"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button18"
            android:background="@mipmap/forth"
            android:layout_width="60sp"
            android:layout_height="50sp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="10dp"
            tools:ignore="RelativeOverlap"
            android:layout_alignBottom="@+id/textView29"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button17"
            android:layout_alignStart="@+id/button17"
            android:layout_below="@+id/textView29"
            android:layout_marginTop="20dp"
            android:text="@string/name_of_company"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView39"
            android:layout_alignStart="@+id/textView39"
            android:layout_below="@+id/textView39"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_alignRight="@+id/button18"
            android:layout_alignEnd="@+id/button18" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText14"
            android:layout_alignStart="@+id/editText14"
            android:layout_below="@+id/editText14"
            android:layout_marginTop="30dp"
            android:text="@string/position_held"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editText15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView40"
            android:layout_alignStart="@+id/textView40"
            android:layout_below="@+id/textView40"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_alignRight="@+id/editText14"
            android:layout_alignEnd="@+id/editText14" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText15"
            android:layout_alignStart="@+id/editText15"
            android:layout_below="@+id/editText15"
            android:layout_marginTop="30dp"
            android:text="@string/years_of_employment"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editText17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView41"
            android:layout_alignStart="@+id/textView41"
            android:layout_below="@+id/textView41"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_alignRight="@+id/editText15"
            android:layout_alignEnd="@+id/editText15" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText17"
            android:layout_alignStart="@+id/editText17"
            android:layout_below="@+id/editText17"
            android:layout_marginTop="30dp"
            android:text="@string/description_of_responsibilities"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editText18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView42"
            android:layout_alignStart="@+id/textView42"
            android:layout_below="@+id/textView42"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_alignRight="@+id/editText17"
            android:layout_alignEnd="@+id/editText17" />

    </RelativeLayout>
</ScrollView>